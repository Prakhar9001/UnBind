rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This locks the books so ONLY the owner can see/edit them
    match /users/{userId}/books/{bookId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to submit feedback
    match /feedback/{feedbackId} {
      // Only allow creation if the user is logged in and the payload's userId matches their UID
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Deny read/update/delete for normal users (only admins via Firebase Console can view)
      allow read, update, delete: if false;
    }
  }
}
